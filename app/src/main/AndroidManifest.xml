<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ian2018.socketclinet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.StartActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask" />

        <activity android:name=".activity.ChooseChartActivity" />
        <activity android:name=".activity.ChooseActivity" />
        <activity android:name=".activity.ChooseGroupActivity" />
        <activity android:name=".activity.CreateGroupActivity" />
        <activity android:name=".activity.JoinGroupActivity" />

        <activity android:name=".activity.TestActivity">

        </activity>

        <service android:name=".service.SocketService" />
    </application>

</manifest>